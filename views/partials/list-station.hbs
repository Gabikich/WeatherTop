
<div class="columns is-multiline">
  {{#each stations}}
  <div class="column is-12">
    <div class="box">
      <!-- Nome da Estação -->
      <h2 class="title is-4 has-text-black has-text-weight-bold">
        <a href="/station/{{_id}}">{{name}}</a>
      </h2>

      <!-- Linha com 4 mini-cards -->
      <div class="columns">
        <!-- Weather -->
        <div class="column is-3">
          <div class="box has-background-warning has-text-white has-text-centered">
            <p class="has-text-weight-bold">☁️ Weather</p>
            {{#if summary}}
              <img src="{{summary.icon}}" alt="Weather icon" width="45" />
                     <p>{{summary.description}}</p>
            {{else}}
              <p>No data</p>
            {{/if}}
          </div>
        </div>

        <!-- Temperatura -->
        <div class="column is-3">
          <div class="box has-background-dark has-text-white has-text-centered">
            <p class="has-text-weight-bold">🌡️ Temperature</p>
            <p>Latest: {{stats.latestTemp}} °C</p>
            <p>Min: {{stats.minTemp}} °C</p>
            <p>Max: {{stats.maxTemp}} °C</p>
          </div>
        </div>

        <!-- Vento -->
        <div class="column is-3">
          <div class="box has-background-info has-text-white has-text-centered">
            <p class="has-text-weight-bold">💨 Wind</p>
            <p>Latest: {{stats.latestWind}} °C</p>
            <p>Min: {{stats.minWind}} km/h</p>
            <p>Max: {{stats.maxWind}} km/h</p>
          </div>
        </div>

        <!-- Pressão -->
        <div class="column is-3">
          <div class="box has-background-success has-text-white has-text-centered">
            <p class="has-text-weight-bold">⏱ Pressure</p>
            <p>Latest: {{stats.latestPressure}} °C</p>
            <p>Min: {{stats.minPressure}} hPa</p>
            <p>Max: {{stats.maxPressure}} hPa</p>
          </div>
        </div>
      </div>

      <!-- Linha só com os botões -->
        <div class="column is-3">
          <a href="/station/{{_id}}" class="button is-small">
           {{>icons/open}}
          </a>
          <a href="/dashboard/deletestation/{{_id}}" class="button is-small">
           {{>icons/delete}}
          </a>
        </div>
    </div>
  </div>
  {{/each}}
</div>
